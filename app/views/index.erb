<div class="container">

    <div class="racetrack" id="racetrack" hidden>
        <h1>Riverside Park Drag Strip</h1>
        <span id="p1">Player 1</span> vs. <span id="p2">Player 2</span>
        Game #: <span id="game_id">Game ID</span>
        <input id="start_timer" type="submit" value="START TIMER">
        <p id="elapsed_time"></p>
        <table class="racer_table" id="racer_table" >
          <tr id="player1">
            <td class="active"></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>

          <tr id="player2">
            <td class="active"></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </table>
    </div>

    <div id="login_container" class="login_form">
        <h1>Welcome to Riverside Park</h1>
        <h3>Home of AJAX Racers</h3>
        <form id="login_form" action="/login" method="POST">
            <input id="player1_name" type="text" name="player1_name" placeholder="Racer 1 Name">
            <input id="player2_name" type="text" name="player2_name" placeholder="Racer 2 Name">
            <input type="submit" value="START YOUR ENGINES! LET'S RACE!">
        </form>
    </div>

    <div class="race_results" id="race_results" hidden>
        <p>Game #: <span id="results_game_id"></span></p>
        <p>Matchup: <span id="results_matchup"></span></p>
        <p>Winner: <span id="results_winner"></span></p>
        <p>Time: <span id="results_time"></span></p>
        <p>Permalink: <a href="#" id="results_link"></a></p>
        <input id="race_again" type="submit" value="RACE AGAIN">
        <input id="exit" type="submit" value="BACK TO THE PIT">
    </div>


</div>
